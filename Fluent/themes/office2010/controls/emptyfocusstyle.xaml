<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="ControlStyleEmptyFocus" TargetType="{x:Type Control}">
    <Setter Property="Control.Template" Value="{DynamicResource ControlFocusEmptyTemplate}"/>
  </Style>
  <ControlTemplate x:Key="ControlFocusEmptyTemplate" TargetType="{x:Type Control}">
    <Rectangle Stroke="#00000000">
      <Shape.Fill>
        <SolidColorBrush/>
      </Shape.Fill>
    </Rectangle>
  </ControlTemplate>
</ResourceDictionary>