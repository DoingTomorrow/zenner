<Window x:Class="HandlerLib.TypeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Type" Height="211.179" Width="704.627" WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/StartupLib;component/Images/ZR.ico" ResizeMode="NoResize">
  <Grid>
    <Label Content="Hardware Type:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
    <ComboBox Name="ComboBoxHardwareType" Margin="129,44,13,0" VerticalAlignment="Top"/>
    <Label Content="SAP Number:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
    <TextBox Name="TextBoxSapNumber" Margin="129,13,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
             Width="212"/>
    <Label Content="Description:" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top"/>
    <TextBox Name="TextBoxDescription" Margin="129,75,10,0" VerticalAlignment="Top"/>
    <Label Content="(or XX__BASETYPE or xx__PARAMETER__TYPE)" HorizontalAlignment="Left" Margin="346,10,0,0"
           VerticalAlignment="Top"/>
    <Label Content="TypeCreationString:" HorizontalAlignment="Left" Margin="10,104,0,0"
           VerticalAlignment="Top"/>
    <TextBox x:Name="TextBoxTypeCreationString" Margin="129,106,10,0" VerticalAlignment="Top"/>
    <CheckBox Name="CheckBoxBASETYPE" Content="Create in BASETYPE range" IsChecked="True"
              HorizontalAlignment="Left" Margin="12,152,0,0" VerticalAlignment="Top"/>
    <Button Click="ButtonCreate_Click" x:Name="ButtonCreate" Content="Create new type" Margin="0,0,200,10"
            VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="175"/>
    <Button Click="ButtonSave_Click" x:Name="ButtonSave" Content="Change type" Margin="0,0,10,10"
            VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="175"/>
  </Grid>
</Window>