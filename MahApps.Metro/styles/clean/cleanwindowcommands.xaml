<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:MahApps.Metro.Controls">
  <Style x:Key="CleanWindowCommandsStyleKey" TargetType="{x:Type Controls:WindowCommands}">
    <Setter Property="Controls:ControlsHelper.ContentCharacterCasing" Value="Upper"/>
    <Setter Property="Controls:WindowCommands.ShowLastSeparator" Value="false"/>
    <Setter Property="Controls:WindowCommands.SeparatorHeight" Value="11"/>
  </Style>
</ResourceDictionary>