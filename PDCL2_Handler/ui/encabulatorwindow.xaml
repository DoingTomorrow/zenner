<Window x:Class="PDCL2_Handler.UI.EncabulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Closing="Window_Closing" Title="Encabulator" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">
  <Grid>
    <Button Click="ButtonStart_Click" Name="ButtonStart" Content="Start" HorizontalAlignment="Left"
            Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
    <TextBox Name="TextBoxOutput" Margin="0,35,0,0" TextWrapping="Wrap" Text=""
             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
             ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    <Button Click="ButtonStop_Click" x:Name="ButtonStop" Content="Stop" HorizontalAlignment="Left"
            Margin="100,10,0,0" VerticalAlignment="Top" Width="75"/>
    <Button Click="ButtonShowFile_Click" x:Name="ButtonShowFile" Content="Show File" Margin="0,10,24,0"
            VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
  </Grid>
</Window>